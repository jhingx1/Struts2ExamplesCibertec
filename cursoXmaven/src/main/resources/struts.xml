<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default" namespace="/">
        
        <!-- Profesores -->
        <action name="profesoresQry" class="web.action.ProfesoresAction">
            <result name="success">/view/profesoresQry.jsp</result>
        </action>
        
        <action name="profesoresInsForm" class="web.action.ProfesoresAction">
            <result name="success">/view/profesoresIns.jsp</result>
        </action>
        
        <action name="profesoresIns" class="web.action.ProfesoresAction"
                method="profesoresIns">
            <result name="input">/view/profesoresIns.jsp</result>
            <result name="success" type="redirect">profesoresQry</result> 
            <result name="error">/view/profesoresIns.jsp</result>  
        </action>
        
        <action name="profesoresDel" class="web.action.ProfesoresAction"
                method="profesoresDel">
            <result name="success" type="redirect">profesoresQry</result> 
            <result name="error">/view/profesoresQry.jsp</result>  
        </action>
        
        <action name="profesorGet" class="web.action.ProfesoresAction"
                method="profesoresGet">
            <result name="success">/view/profesoresUpd.jsp</result> 
            <result name="error">/view/profesoresQry.jsp</result>  
        </action>
        
        <action name="profesoresUpd" class="web.action.ProfesoresAction"
                method="profesoresUpd">
            <result name="input">/view/profesoresUpd.jsp</result>
            <result name="success" type="redirect">profesoresQry</result> 
            <result name="error">/view/profesoresUpd.jsp</result>  
        </action>
        
        <!--- Cursos-->
        <action name="cursosQry" class="web.action.CursosAction">
            <result name="success">/view/cursosQry.jsp</result>
        </action>
        <action name="cursosInsForm" class="web.action.CursosAction">
            <result name="success">/view/cursosIns.jsp</result>
        </action>
        
        <action name="cursosIns" class="web.action.CursosAction" method="cursosIns">
                <result name="input">/view/cursosIns.jsp</result>
                <result name="success" type="redirect">cursosQry</result>
                <result name="error">/view/cursosIns.jsp</result>    
        </action>

        <action name="cursosDel" class="web.action.CursosAction"
                method="cursosDel">
            <result name="success" type="redirect">cursosQry</result> 
            <result name="error">/view/cursosQry.jsp</result>  
        </action>
        
        <action name="cursosGet" class="web.action.CursosAction"
                method="cursosGet">
            <result name="success">/view/cursosUpd.jsp</result> 
            <result name="error">/view/cursosQry.jsp</result>  
        </action>
        
        <action name="cursosUpd" class="web.action.CursosAction"
                method="cursosUpd">
            <result name="input">/view/cursosUpd.jsp</result>
            <result name="success" type="redirect">cursosQry</result> 
            <result name="error">/view/cursosUpd.jsp</result>  
        </action>
        
        
    </package>
</struts>

